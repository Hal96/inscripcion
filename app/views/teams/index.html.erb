<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

  <div class="teams-container">
    <% @teams.each_with_index do |t,i| %>
    <div id=<%=i%> class="team">
      <%= link_to team_path(t) do%>
        <div id="link<%=i%>""  class="team-name">
          <%= t.teamName %>
        </div>
      <%end%>
    </div>
    <%end%>
  </div>

  <script type="text/javascript">
    colorCircles(<%= @teams.size %>);
  </script>

</body>
</html>